[all]
bears = SpaceConsistencyBear
files = **
ignore = .git/**, venv/**, **.png, **.md, **.orig, **.jpg
use_spaces = True

[markdown]
bears = SpaceConsistencyBear, LineLengthBear, MarkdownBear
files = **.md
ignore = venv/**
use_spaces = True
allow_trailing_whitespace = True
max_line_length = 100
list_indent = 1
horizontal_rule = -

[python]
bears = LineLengthBear, PyLintBear
files = **.py
ignore = venv/**
max_line_length = 79
pylint_cli_options = --disable=fixme,invalid-name,no-member,too-few-public-methods
