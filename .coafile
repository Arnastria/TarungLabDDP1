[all]
bears = SpaceConsistencyBear
files = **
ignore = .git/**, venv/**, **.png, **.md, **.orig
use_spaces = True

[markdown]
bears = SpaceConsistencyBear, LineLengthBear, MarkdownBear
files = **.md
ignore = venv/**
use_spaces = True
allow_trailing_whitespace = True
max_line_length = 100
list_indent = 1
horizontal_rule = -

[python]
bears = LineLengthBear, PyLintBear
files = **.py
ignore = venv/**, Lab/09/Template_09_A.py, Lab/10/Template_10_A.py
max_line_length = 79
pylint_cli_options = --disable=fixme,invalid-name,no-member
